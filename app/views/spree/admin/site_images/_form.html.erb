<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Spree::Image)), spree.admin_images_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<%= form_for [:admin, resource] do |f| %>
  <div class="row" data-hook="admin_image_form_fields">
    <div class="col-md-6" data-hook="admin_image_form_left">
      <div class="form-group">
        <%= f.label :name %> <span class="required" title="required">*</span>
        <%= f.text_field :name, class: 'form-control' %>
        <%= f.error_message_on :name %>
      </div>

      <div class="form-group">
        <%= f.label :identifier %> (leave blank to generate from name)
        <%= f.text_field :identifier, class: 'form-control' %>
        <%= f.error_message_on :identifier %>
      </div>

      <div class="form-group">
        <%= f.label :url %> (optional)
        <%= f.text_field :url, class: 'form-control' %>
        <%= f.error_message_on :url %>
      </div>

      <div class="form-group">
        <%= f.label :content %> (optional)
        <%= f.text_area :content, rows: 12, class: 'form-control' %>
        <%= f.error_message_on :content %>
      </div>

    </div>

    <div class="col-md-6" data-hook="admin_image_form_right">
      <div class="form-group">
        <%= f.label :image, "Image" %>
        <%= f.file_field :image %>
      </div>

      <% if @image.image_file_name.present? %>
        <div class="form-group">
          <%= link_to @image.image.url, target: :_blank do %>
            <%= image_tag @image.image.url(:small) %>
          <% end %>
        </div>

        <div class="checkbox">
          <%= f.label :remove_image do %>
            <%= f.check_box :remove_image %>
            <%= Spree::Image.human_attribute_name(:remove_image) %>
          <% end %>
        </div>
      <% end %>

    </div>
  </div>

  <div class="row" data-hook="admin_image_form_meta">
    <div class="col-md-12">

    </div>
  </div>

  <div class="row" data-hook="admin_image_form_additional_fields">
    <div class="col-md-12"></div>
  </div>

  <%= render "spree/admin/shared/#{resource.new_record? ? 'new' : 'edit'}_resource_links" %>
<% end %>
