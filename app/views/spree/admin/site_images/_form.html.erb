<% content_for :page_actions do %>
  <%= button_link_to Spree.t(:back_to_resource_list, resource: plural_resource_name(Spree::Image)), spree.admin_images_path, icon: 'arrow-left', class: 'btn-primary' %>
<% end %>

<%= form_for [:admin, resource] do |f| %>
  <div data-hook="admin_site_image_form_fields" class="row">
    <div class="col-md-6">
      <div data-hook="file" class="form-group">
        <%= f.label :attachment, Spree.t(:filename) %>
        <%= f.file_field :attachment %>
      </div>
    </div>
    <div data-hook="alt_text" class="col-md-6">
      <div class="form-group">
        <%= f.label :alt, Spree.t(:alt_text) %>
        <%= f.text_area :alt, :rows => 4, :class => 'form-control' %>
      </div>
    </div>
  </div>


  <%#= render "spree/admin/shared/#{resource.new_record? ? 'new' : 'edit'}_resource_links" %>
<% end %>
